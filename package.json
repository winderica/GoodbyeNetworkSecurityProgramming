{
  "name": "youchat",
  "version": "1.0.0",
  "main": "src/electron/main.js",
  "homepage": "./",
  "license": "MIT",
  "dependencies": {
    "@material-ui/core": "^4.11.0",
    "@material-ui/icons": "^4.9.1",
    "mobx": "^6.0.1",
    "mobx-react": "^7.0.0",
    "node-addon-api": "^3.0.2",
    "notistack": "^1.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1"
  },
  "devDependencies": {
    "@babel/core": "^7.10.5",
    "@babel/plugin-proposal-decorators": "^7.10.5",
    "@pmmmwh/react-refresh-webpack-plugin": "^0.3.3",
    "babel-loader": "^8.1.0",
    "babel-preset-react-app": "^9.1.2",
    "concurrently": "^5.3.0",
    "dotenv": "^8.2.0",
    "electron": "^10.1.3",
    "electron-builder": "^22.9.1",
    "file-loader": "^6.0.0",
    "html-webpack-plugin": "^4.3.0",
    "react-dev-utils": "^10.2.1",
    "react-refresh": "^0.8.3",
    "terser-webpack-plugin": "^3.0.7",
    "url-loader": "^4.1.0",
    "webpack": "^4.43.0",
    "webpack-dev-server": "^3.11.0"
  },
  "scripts": {
    "build:react": "node scripts/build.js",
    "build:electron": "electron-builder",
    "build:cpp:debug": "cmake --build ./src/cpp/build/Debug -- -j 8",
    "build:cpp:release": "cmake --build ./src/cpp/build/Release -- -j 8",
    "build": "yarn build:cpp:release && yarn build:react && yarn build:electron",
    "start": "yarn build:cpp:debug && concurrently \"node scripts/start.js\" \"NODE_ENV=dev electron .\""
  },
  "engines": {
    "node": ">= 14.12.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "you.chat",
    "files": [
      "./src/**/*",
      "./build/**/*"
    ],
    "extraFiles": [
      "./assets"
    ],
    "linux": {
      "target": [
        "dir"
      ]
    }
  }
}
